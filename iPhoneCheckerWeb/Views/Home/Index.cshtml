@model iPhoneCheckerWeb.Models.IndexViewModel
@{
    ViewBag.Title = "iPhone Checker";
}
<script>
    function loadStoresList() {
        var obj = {
            modelCode: $("#modelCode").val()
        };
        

        $.ajax(
            {
                url: '@Url.Action("ListStores", "Home")',
                contentType: "application/json; charset=utf-8",
                type: "POST",
                dataType: "json",
                data: JSON.stringify(obj),
                success: function (data)
                {
                    if (data.success) {
                        alert(data.stores);
                    } else {
                        alert(data.message);
                    }
                },
                error: function (data)
                {
                    alert("error " + data);
                }
            }
        );
    };
</script>

<div class="jumbotron">
    <h1>iPhone Checker</h1>
    <p class="lead">Select the iPhone model you're interested in and we'll find out where it's in stock</p>
    <p>@Html.EnumDropDownListFor(m=>m.modelCode) <a id="listStoresBtn" href="" onclick="event.preventDefault(); loadStoresList();" class="btn btn-primary btn-lg">List Stores</a></p>
</div>

